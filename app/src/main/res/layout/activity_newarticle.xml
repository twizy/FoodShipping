<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Newarticle">

    <include
        android:id="@+id/newarticle_toolbar"
        layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nouveau article"
            android:textSize="25sp"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/article_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="* Nom de l'article"
            android:textSize="28sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unité accepté : Kg, Tonne, Litre"
            android:textSize="18sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"/>

        <EditText
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="* Unité"
            android:textSize="28sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"/>

        <EditText
            android:id="@+id/price_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="* Prix / Unité"
            android:textSize="28sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:inputType="number"/>

        <Button
            android:id="@+id/add_now_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="21sp"/>

    </LinearLayout>

</RelativeLayout>